@model NoteModel

@{
    ViewData["Title"] = "NoteDetail";
}

<div class="note-detail">
    <div class="card card-default note-detail__card">
        <div class="card-heading note-detail__card-header">
            <h1 class="card-title note-detail__card-title">
                @Model.Subject
            </h1>
        </div>
        <div class="card-body">
            <div class="note-detail__date-section">
                <div>
                    <span class="note-detail__created-date-key">
                        Created On:
                    </span>
                    <span class="note-detail__created-date-value">
                        @Model.CreatedDate.Date.ToString("MMMM dd, yyyy")
                    </span>
                </div>
                <div>
                    <span class="note-detail__modified-date-key">
                        Last Modified On:
                    </span>
                    <span class="note-detail__modified-date-value">
                        @Model.LastModifiedDate.Date.ToString("MMMM dd, yyyy")
                    </span>
                </div>
            </div>
            <hr />
            <div>
                @Model.Detail
            </div>
        </div>
        <div class="card-footer note-detail__footer">
            <div class="note-detail__flex-container">
                <div>
                    <a class="note-detail__button" asp-action="Index">
                        Back to List
                    </a>
                </div>
                <div>
                    <a class="note-detail__button" asp-action="NoteEditor" asp-route-id="@Model.NoteId">
                        Edit Note
                    </a>
                </div>
                <div>
                    <a class="note-detail__button" asp-action="DeleteNote" asp-route-id="@Model.NoteId">
                        Delete Note
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>